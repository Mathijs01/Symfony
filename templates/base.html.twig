<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
{% block nav %}
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <img src="{{ asset('img/boksen_plaatje.jpg') }}" alt="plaatje" style="width: 300px">
            </div>
            <div class="col-sm">
                <p style="font-family: 'Bauhaus 93'; font-size: 2.5rem; color: #AA3333">Training Centrum Den Haag</p>
            </div>
            <div class="col-sm">
                {% if app.user %}
                    <form class="p-2 ml-auto text-danger" style="text-align: right">
                        <h4>Je bent ingelogt als: <br><br> - {{ app.user.username }} - <br><br></h4>
                        <a type="button" class="btn btn-outline-danger" href="{{ logout_path('main') }}">Uitloggen</a>
                    </form>
                {% else %}
                    <form class="p-2 ml-auto text-danger" style="text-align: right">
                        <h4>U kunt hier klikken <br><br> om te inloggen</h4><br>
                        <a type="button" href="/login" class="btn btn-outline-danger">Inloggen</a>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
    <hr style="background-color: #AA3333">
    <ul class="nav justify-content-center">
        {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/gedrag">gedragsregels</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/user/gegevens-wijzigen">Leden</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="admin/training">Training</a>
            </li>
        {% elseif is_granted("ROLE_INSTRUCTOR") %}
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/instructor/lesson/plannen">Plannen lessen</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/instructor/lesson/overzicht">Lessen beheer</a>
            </li>
        {% elseif is_granted('ROLE_USER') %}
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/user/lesson/overzicht">Inschrijven op les</a>
            </li>
{#            <li class="nav-item">#}
{#                <a class="nav-link" href="#">Overzicht inschrijvingen</a>#}
{#            </li>#}
            <li class="nav-item">
                <a class="nav-link" href="/user/4/edit">Gegevens lid wijzigen</a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/trainings-aanbod">Trainings Aanbod</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/user/new">Lid Worden</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/gedragsregels">Gedragsregels</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/contact">Lokatie & Contact</a>
            </li>
        {% endif %}
    </ul>
    <hr style="background-color: #AA3333">
{% endblock %}

{% block body %}
    {% block header %}
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <img src="{{ asset('img/bokstraining1.jpg') }}" alt="plaatje" style="height: 300px;">
                </div>
                <div class="col-sm-4">
                    <img src="{{ asset('img/kickboksen-training.jpg') }}" alt="plaatje" style="height: 300px;">
                </div>
                <div class="col-sm-4">
                    <img src="{{ asset('img/MMA-training.jpg') }}" alt="plaatje" style="height: 300px;">
                </div>
            </div>
        </div>
    {% endblock %}
    <div class="container">
        {% block main %}{% endblock %}
    </div>
{% endblock %}

{% block footer %}
   <div class="space">
       <p style="color: white; margin-top: 200px">p</p>
   </div>
    <footer class="fixed-bottom " style="height: 100px; background-color: #34495e">
        <h3 style="color: #AA3333; text-align: center; margin-top: 10px">Trainings Centrum Den Haag 010 519
            0532</h3>
        <p style="text-align: center; color: white; font-size: 12px; margin-top: 20px">Developed bij Mathijs</p>
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
